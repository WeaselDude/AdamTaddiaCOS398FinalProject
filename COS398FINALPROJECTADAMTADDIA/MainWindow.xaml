<Window x:Class="GlobalKeyhook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GlobalKeyhook"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="200">
    <Grid Margin="15">
        <Label VerticalAlignment ="Top" HorizontalAlignment ="Left" Content="Keys Pressed"/>
        <ListBox x:Name="keyPressed" Margin="0,26,0,0"/>
    </Grid>
</Window>